  </div>

  <script>
    /* PARTICULES */
    const particlesContainer = document.getElementById('particles');
    for(let i = 0; i < 30; i++) {
      const p = document.createElement('div');
      p.classList.add('particle');
      p.style.width = p.style.height = Math.random() * 5 + 2 + 'px';
      p.style.left = Math.random() * 100 + '%';
      p.style.animationDelay = Math.random() * 20 + 's';
      p.style.animationDuration = 15 + Math.random() * 20 + 's';
      particlesContainer.appendChild(p);
    }

    const channels = ['echo', 'nexttv', 'AIRBENZTV', 'SOCO23'];

    function openModal(id) {
      document.getElementById('playerFrame').src = `watch.html?id=${id}`;
      document.getElementById('playerModal').classList.add('show');
      document.body.style.overflow = 'hidden';
    }
    function closeModal() {
      document.getElementById('playerModal').classList.remove('show');
      document.getElementById('playerFrame').src = '';
      document.body.style.overflow = 'auto';
    }
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape') closeModal();
    });
    document.getElementById('playerModal').addEventListener('click', e => {
      if (e.target.id === 'playerModal') closeModal();
    });

    /* ANIMATION AU SCROLL */
    const cards = document.querySelectorAll('.channel-card');
    function revealCards() {
      cards.forEach(card => {
        const rect = card.getBoundingClientRect();
        if (rect.top < window.innerHeight - 80) card.classList.add('visible');
      });
    }
    window.addEventListener('scroll', revealCards);
    window.addEventListener('load', revealCards);
    
    /* RANDOM CHANNEL */
    function randomChannel() {
      const randomId = channels[Math.floor(Math.random() * channels.length)];
      openModal(randomId);
    }
  </script>

